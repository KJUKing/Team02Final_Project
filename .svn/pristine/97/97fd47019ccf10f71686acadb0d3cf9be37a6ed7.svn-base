body {
	margin: 0;
	height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
	font-family: Arial, sans-serif;
	background-color: #f5f5f5;
}

.main-div {
	text-align: center;
	width: 350px;
	padding: 20px;
	box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
	border-radius: 10px;
	background-color: white;
}

.logo {
	margin-bottom: 10px;
}

#logoImg{
	width: 130px;
	height: 130px;
}
/*  */
.form-group {
	display: flex; /* Flexbox로 좌우 정렬 */
	align-items: center; /* 세로 중앙 정렬 */
	gap: 20px; /* input-area와 button-area 간의 간격 */
	margin-bottom: 20px;
}

.input-area {
	display: flex;
	flex-direction: column; /* 입력 필드 세로 정렬 */
	gap: 3px; /* 입력 필드 간 간격 */
	flex: 1; /* input-area가 가변적으로 더 많은 공간을 차지 */
}

.input-area input {
	width: 100%;
	height: 40px;
	padding: 10px;
	box-sizing: border-box;
	border: 1px solid #ccc;
	margin: 8px;
	border-radius: 5px;
}


.button-area {
	display: flex;
	align-items: center;
	justify-content: center;
}

.button-area button {
	height: 100px; 
	width: 60px; 
	border: none;
	border-radius: 5px;
	background-color: #007bff;
	color: white;
	font-size: 14px;
	cursor: pointer;
}

/*  */
.links {
	font-size: 12px;
	color: #007bff;
}

.links a {
	text-decoration: none;
	color: #007bff;
	margin: 0 5px;
}

.links a:hover {
	text-decoration: underline;
}

.form-control{
	margin-bottom:3px;
}

#guide-phone-auth, #phone-auth-result{
	padding-top: 10px;
	font-size: 13px;
	color: grey;
}

#auth-check-form{
	padding-top: 10px;	
}

#smsLabel{
	text-align: center;
}

/*회원가입 관련 css*/
.join-main-div{
	text-align: center;
	width: 800px;
	padding: 20px;
	box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
	border-radius: 10px;
	background-color: white;
}

#googleInfo{
	font-size: 15px;
}

