@charset "UTF-8";

    .facility-container {
        display: flex; /* 가로로 정렬 */
        align-items: flex-start; /* 세로 정렬 설정 */
        margin-bottom: 20px; /* 각 시설 정보 간격 */
    }

    .facility-image {
        flex: 1; /* 이미지 크기 비율 */
    }

    .facility-image img {
        width: 100%; 
        height: auto;
        max-width: 300px; /* 최대 너비 제한 */
    }

    .facility-info {
        flex: 2; /* 텍스트 크기 비율 */
        margin-left: 20px; /* 이미지와 텍스트 사이 여백 */
        font-size: 16px;
    }

    .facility-info td {
        padding: 5px; /* 셀 간격 */
    }
